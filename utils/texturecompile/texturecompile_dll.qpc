macro SRCDIR "../.."
macro OUTBINDIR "$SRCDIR$/../game/bin"

include "$SRCDIR$/_qpc_scripts/source_dll_base.qpc"

config
{
	compile
	{
		defines
		{
			"_USRDLL"
			"TEXTURECOMPILE_EXPORTS"
		}
		
		inc_dirs
		{
			"$SRCDIR$/utils/common"
			"$SRCDIR$/utils/vmpi"
		}
