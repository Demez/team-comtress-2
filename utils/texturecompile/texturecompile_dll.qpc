	link
	{
		libs
		{
			"ws2_32.lib"
			"odbc32.lib"
			"odbccp32.lib"
			"tier2"
			"vmpi"
		}
	}
}

files
{
	folder "Source Files"
	{
		"../common/cmdlib.cpp"
		"$SRCDIR$/public/filesystem_helpers.cpp"
		"../common/pacifier.cpp"
		"texturecompile.cpp"
		"../common/threads.cpp"
		"../common/vmpi_tools_shared.cpp"
	}

	folder "Header Files"
	{
		"$SRCDIR$/public/tier1/UtlStringMap.h"
	}
