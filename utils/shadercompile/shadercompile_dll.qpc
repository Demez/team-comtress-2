		"subprocess.cpp"
		"cfgprocessor.cpp"
		"../common/threads.cpp"
		"../common/vmpi_tools_shared.cpp"
		"../common/tools_minidump.cpp"
	}

	folder "Header Files"
	{
		"cmdsink.h"
		"d3dxfxc.h"
		"$SRCDIR$/public/ishadercompiledll.h"
		"shadercompile.h"
		"utlnodehash.h"
		"cfgprocessor.h"
		"$SRCDIR$/public/tier1/UtlStringMap.h"
	}
}
