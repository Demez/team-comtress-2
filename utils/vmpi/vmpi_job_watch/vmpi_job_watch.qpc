		"vmpi_browser_job_watch.rc"
		"../win_idle.cpp"
		"../window_anchor_mgr.cpp"
	}

	folder "Header Files"
	{
		"../../common/consolewnd.h"
		"GraphControl.h"
		"../idle_dialog.h"
		"JobWatchDlg.h"
		"../mysql_async.h"
		"../mysql_wrapper.h"
		"Resource.h"
		"StdAfx.h"
		"vmpi_browser_job_watch.h"
		"../win_idle.h"
	}

	folder "Resource Files"
	{
		"res/vmpi_browser_job_watch.ico"
		"res/vmpi_browser_job_watch.rc2"
	}
}
