macro PROJECT_NAME "vmpi_job_watch"

macro SRCDIR "../../.."
macro OUTBINDIR "$SRCDIR$/../game/bin"
macro OUTBINNAME "vmpi_job_watch"

include "$SRCDIR$/_qpc_scripts/source_exe_base.qpc"

config
{
	compile
	{
		defines
		{
			"PROTECTED_THINGS_DISABLE"
			"WINVER=0x501"
			"NO_WARN_MBCS_MFC_DEPRECATION"
		}
		
		inc_dirs
		{
			"./"
			"../"
			"../../common"
			"../mysql/include"
		}
		
		options
		{
			"/EHsc"
		}
	}
	
	link
	{
		libs
		{
			"nafxcwd.lib" [$DEBUG$]
			"nafxcw.lib" "libcmt.lib" [$RELEASE$]
		}
		
		ignore_libs
		{
			"nafxcw.lib" "libcmt.lib" [$DEBUG$]
			"nafxcwd.lib" "libcmtd.lib" [$RELEASE$]
		}
	}
}

files
{
	folder "Source Files"
	{
		- "$SRCDIR$/public/tier0/memoverride.cpp"
		"../../common/consolewnd.cpp"
		"GraphControl.cpp"
		"../idle_dialog.cpp"
		"JobWatchDlg.cpp"
